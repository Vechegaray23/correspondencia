{
  "name": "correspondencia",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build:client": "cd client && npm ci && npm run build",
    "start": "npm run migrate:up && node src/server.js",
    "dev":   "npm run build:client && nodemon src/server.js",
    "lint": "eslint src --ext .js",
    "format": "prettier --write .",
    "test": "echo \"No tests specified\" && exit 0",
  
    "migrate:local": "psql -U vicenteechegaray -d correspondencia -f migrations/*.sql",
  
    "migrate:up": "node-pg-migrate up --database-url \"$DATABASE_URL\" --dir migrations --extension sql",
    "migrate:down": "node-pg-migrate down --database-url \"$DATABASE_URL\" --dir migrations --extension sql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vechegaray23/correspondencia.git"
  },
